<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gig.collide.mapper.CategoryMapper">

    <!-- 基础字段映射 -->
    <sql id="Base_Column_List">
        id, name, description, parent_id, icon_url, sort, content_count, status, create_time, update_time
    </sql>

    <!-- =================== 基础查询 =================== -->

    <!-- 根据父分类ID获取子分类列表 -->
    <select id="selectChildCategories" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        <![CDATA[
        WHERE parent_id = #{parentId}
        ]]>
        <if test="status != null and status != ''">
            <![CDATA[
            AND status = #{status}
            ]]>
        </if>
        <choose>
            <when test="orderBy == 'name' and orderDirection == 'ASC'">
                ORDER BY name ASC
            </when>
            <when test="orderBy == 'name'">
                ORDER BY name DESC
            </when>
            <when test="orderBy == 'content_count' and orderDirection == 'ASC'">
                ORDER BY content_count ASC
            </when>
            <when test="orderBy == 'content_count'">
                ORDER BY content_count DESC
            </when>
            <when test="orderBy == 'create_time' and orderDirection == 'ASC'">
                ORDER BY create_time ASC
            </when>
            <when test="orderBy == 'create_time'">
                ORDER BY create_time DESC
            </when>
            <when test="orderBy == 'update_time' and orderDirection == 'ASC'">
                ORDER BY update_time ASC
            </when>
            <when test="orderBy == 'update_time'">
                ORDER BY update_time DESC
            </when>
            <when test="orderBy == 'sort' and orderDirection == 'ASC'">
                ORDER BY sort ASC
            </when>
            <otherwise>
                ORDER BY sort DESC
            </otherwise>
        </choose>
    </select>

    <!-- 分页获取分类列表 -->
    <select id="selectCategoriesPage" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        <![CDATA[
        WHERE 1=1
        ]]>
        <if test="parentId != null">
            <![CDATA[
            AND parent_id = #{parentId}
            ]]>
        </if>
        <if test="status != null and status != ''">
            <![CDATA[
            AND status = #{status}
            ]]>
        </if>
        <choose>
            <when test="orderBy == 'name' and orderDirection == 'ASC'">
                ORDER BY name ASC
            </when>
            <when test="orderBy == 'name'">
                ORDER BY name DESC
            </when>
            <when test="orderBy == 'content_count' and orderDirection == 'ASC'">
                ORDER BY content_count ASC
            </when>
            <when test="orderBy == 'content_count'">
                ORDER BY content_count DESC
            </when>
            <when test="orderBy == 'create_time' and orderDirection == 'ASC'">
                ORDER BY create_time ASC
            </when>
            <when test="orderBy == 'create_time'">
                ORDER BY create_time DESC
            </when>
            <when test="orderBy == 'update_time' and orderDirection == 'ASC'">
                ORDER BY update_time ASC
            </when>
            <when test="orderBy == 'update_time'">
                ORDER BY update_time DESC
            </when>
            <when test="orderBy == 'sort' and orderDirection == 'ASC'">
                ORDER BY sort ASC
            </when>
            <otherwise>
                ORDER BY sort DESC
            </otherwise>
        </choose>
    </select>

    <!-- 根据名称搜索分类（MySQL 8.4 索引优化版） -->
    <select id="searchCategories" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        <![CDATA[
        WHERE 1=1
        ]]>
        <if test="keyword != null and keyword != ''">
            <!-- 优化：使用前缀搜索和函数索引，支持大小写不敏感 -->
            <![CDATA[
            AND (
                name LIKE CONCAT(#{keyword}, '%')
                OR LOWER(name) LIKE LOWER(CONCAT(#{keyword}, '%'))
            )
            ]]>
        </if>
        <if test="parentId != null">
            <![CDATA[
            AND parent_id = #{parentId}
            ]]>
        </if>
        <if test="status != null and status != ''">
            <![CDATA[
            AND status = #{status}
            ]]>
        </if>
        <choose>
            <when test="orderBy == 'name' and orderDirection == 'ASC'">
                <![CDATA[
                ORDER BY 
                    CASE WHEN name = #{keyword} THEN 1 ELSE 2 END,
                    name ASC
                ]]>
            </when>
            <when test="orderBy == 'name'">
                <![CDATA[
                ORDER BY 
                    CASE WHEN name = #{keyword} THEN 1 ELSE 2 END,
                    name DESC
                ]]>
            </when>
            <when test="orderBy == 'content_count' and orderDirection == 'ASC'">
                <![CDATA[
                ORDER BY content_count ASC, sort ASC
                ]]>
            </when>
            <when test="orderBy == 'content_count'">
                <![CDATA[
                ORDER BY content_count DESC, sort ASC
                ]]>
            </when>
            <when test="orderBy == 'create_time' and orderDirection == 'ASC'">
                <![CDATA[
                ORDER BY create_time ASC
                ]]>
            </when>
            <when test="orderBy == 'create_time'">
                <![CDATA[
                ORDER BY create_time DESC
                ]]>
            </when>
            <when test="orderBy == 'update_time' and orderDirection == 'ASC'">
                <![CDATA[
                ORDER BY update_time ASC
                ]]>
            </when>
            <when test="orderBy == 'update_time'">
                <![CDATA[
                ORDER BY update_time DESC
                ]]>
            </when>
            <otherwise>
                <![CDATA[
                ORDER BY 
                    CASE WHEN name = #{keyword} THEN 1 ELSE 2 END,
                    content_count DESC,
                    sort DESC
                ]]>
            </otherwise>
        </choose>
    </select>

    <!-- =================== 层级查询（MySQL兼容，无连表设计） =================== -->

    <!-- 获取分类路径（简化版，逐层查询，由Service层处理） -->
    <select id="selectCategoryPath" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        <![CDATA[
        WHERE id = #{categoryId}
        ]]>
    </select>

    <!-- 获取分类的所有祖先（MySQL 8.4 递归CTE优化版） -->
    <select id="selectCategoryAncestors" resultType="com.gig.collide.domain.Category">
        WITH RECURSIVE category_ancestors AS (
            -- 锚点：当前分类
            SELECT <include refid="Base_Column_List"/>, 0 as level
            FROM t_category 
            <![CDATA[
            WHERE id = #{categoryId}
            ]]>
            
            UNION ALL
            
            -- 递归：查找父分类
            SELECT c.<include refid="Base_Column_List"/>, ca.level + 1
            FROM t_category c
            INNER JOIN category_ancestors ca ON c.id = ca.parent_id
            <![CDATA[
            WHERE c.parent_id != 0
            ]]>
        )
        SELECT id, name, description, parent_id, icon_url, sort, content_count, status, create_time, update_time
        FROM category_ancestors
        <![CDATA[
        WHERE level > 0
        ]]>
        <if test="includeInactive != null and !includeInactive">
            <![CDATA[
            AND status = 'active'
            ]]>
        </if>
        <![CDATA[
        ORDER BY level DESC
        ]]>
    </select>

    <!-- 获取分类的所有后代（MySQL 8.4 递归CTE优化版） -->
    <select id="selectCategoryDescendants" resultType="com.gig.collide.domain.Category">
        WITH RECURSIVE category_descendants AS (
            -- 锚点：当前分类
            SELECT <include refid="Base_Column_List"/>, 0 as level
            FROM t_category 
            <![CDATA[
            WHERE id = #{categoryId}
            ]]>
            
            UNION ALL
            
            -- 递归：查找子分类
            SELECT c.<include refid="Base_Column_List"/>, cd.level + 1
            FROM t_category c
            INNER JOIN category_descendants cd ON c.parent_id = cd.id
            <if test="maxDepth != null">
                <![CDATA[
                WHERE cd.level < #{maxDepth}
                ]]>
            </if>
        )
        SELECT id, name, description, parent_id, icon_url, sort, content_count, status, create_time, update_time
        FROM category_descendants
        <![CDATA[
        WHERE level > 0
        ]]>
        <if test="includeInactive != null and !includeInactive">
            <![CDATA[
            AND status = 'active'
            ]]>
        </if>
        <![CDATA[
        ORDER BY level ASC, sort ASC
        ]]>
    </select>

    <!-- 获取分类树形结构数据（简化版，获取所有相关数据，Service层构建树） -->
    <select id="selectCategoryTree" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        WHERE 1=1
        <choose>
            <when test="rootId != null and rootId != 0">
                AND (id = #{rootId} OR parent_id = #{rootId})
            </when>
            <otherwise>
                AND parent_id = 0
            </otherwise>
        </choose>
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <choose>
            <when test="orderBy == 'name' and orderDirection == 'ASC'">
                ORDER BY name ASC
            </when>
            <when test="orderBy == 'name'">
                ORDER BY name DESC
            </when>
            <when test="orderBy == 'content_count' and orderDirection == 'ASC'">
                ORDER BY content_count ASC
            </when>
            <when test="orderBy == 'content_count'">
                ORDER BY content_count DESC
            </when>
            <when test="orderBy == 'create_time' and orderDirection == 'ASC'">
                ORDER BY create_time ASC
            </when>
            <when test="orderBy == 'create_time'">
                ORDER BY create_time DESC
            </when>
            <when test="orderBy == 'update_time' and orderDirection == 'ASC'">
                ORDER BY update_time ASC
            </when>
            <when test="orderBy == 'update_time'">
                ORDER BY update_time DESC
            </when>
            <when test="orderBy == 'sort' and orderDirection == 'ASC'">
                ORDER BY sort ASC
            </when>
            <otherwise>
                ORDER BY sort DESC
            </otherwise>
        </choose>
    </select>

    <!-- 获取所有分类（用于Service层构建完整树形结构） -->
    <select id="selectAllCategories" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        <if test="status != null and status != ''">
            WHERE status = #{status}
        </if>
        ORDER BY parent_id ASC, sort ASC
    </select>

    <!-- =================== 统计查询 =================== -->

    <!-- 统计分类数量 -->
    <select id="countCategories" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM t_category
        WHERE 1=1
        <if test="parentId != null">
            AND parent_id = #{parentId}
        </if>
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
    </select>

    <!-- 统计子分类数量 -->
    <select id="countChildCategories" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM t_category
        WHERE parent_id = #{parentId}
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
    </select>

    <!-- 获取分类统计信息 -->
    <select id="selectCategoryStatistics" resultType="java.util.Map">
        SELECT 
            COUNT(*) as total_count,
            SUM(CASE WHEN status = 'active' THEN 1 ELSE 0 END) as active_count,
            SUM(CASE WHEN status = 'inactive' THEN 1 ELSE 0 END) as inactive_count,
            SUM(content_count) as total_content_count,
            AVG(content_count) as avg_content_count,
            MAX(content_count) as max_content_count,
            MIN(content_count) as min_content_count
        FROM t_category
        WHERE 1=1
        <if test="categoryId != null">
            AND (id = #{categoryId} OR parent_id = #{categoryId})
        </if>
    </select>

    <!-- =================== 更新操作 =================== -->

    <!-- 更新分类内容数量 -->
    <update id="updateContentCount">
        UPDATE t_category
        SET content_count = GREATEST(0, content_count + #{increment}),
            update_time = NOW()
        WHERE id = #{categoryId}
    </update>

    <!-- 批量更新分类状态 -->
    <update id="batchUpdateStatus">
        UPDATE t_category
        SET status = #{status},
            update_time = NOW()
        WHERE id IN
        <foreach collection="categoryIds" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </update>

    <!-- 批量更新排序值 -->
    <update id="batchUpdateSort">
        <foreach collection="sortMappings" index="categoryId" item="sortValue" separator=";">
            UPDATE t_category
            SET sort = #{sortValue},
                update_time = NOW()
            WHERE id = #{categoryId}
        </foreach>
    </update>

    <!-- 更新分类的父分类 -->
    <update id="updateParentCategory">
        UPDATE t_category
        SET parent_id = #{newParentId},
            update_time = NOW()
        WHERE id = #{categoryId}
    </update>

    <!-- =================== 高级查询 =================== -->

    <!-- 检查分类名称是否存在 -->
    <select id="existsCategoryName" resultType="java.lang.Boolean">
        <![CDATA[
        SELECT COUNT(*) > 0
        FROM t_category
        WHERE name = #{name}
        AND parent_id = #{parentId}
        ]]>
        <if test="excludeId != null">
            <![CDATA[
            AND id != #{excludeId}
            ]]>
        </if>
    </select>

    <!-- 获取热门分类（按内容数量排序） -->
    <select id="selectPopularCategories" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        WHERE 1=1
        <if test="parentId != null">
            AND parent_id = #{parentId}
        </if>
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        ORDER BY content_count DESC, sort ASC
    </select>

    <!-- 获取叶子分类（没有子分类的分类） -->
    <select id="selectLeafCategories" resultType="com.gig.collide.domain.Category">
        SELECT c.<include refid="Base_Column_List"/>
        FROM t_category c
        LEFT JOIN t_category child ON c.id = child.parent_id
        WHERE child.id IS NULL
        <if test="parentId != null">
            AND c.parent_id = #{parentId}
        </if>
        <if test="status != null and status != ''">
            AND c.status = #{status}
        </if>
        ORDER BY c.sort ASC
    </select>

    <!-- 获取分类建议（智能搜索推荐） -->
    <select id="selectCategorySuggestions" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        <![CDATA[
        WHERE name LIKE CONCAT('%', #{keyword}, '%')
        ]]>
        <if test="status != null and status != ''">
            <![CDATA[
            AND status = #{status}
            ]]>
        </if>
        <![CDATA[
        ORDER BY 
            CASE WHEN name = #{keyword} THEN 1 ELSE 2 END,
            content_count DESC,
            sort ASC
        ]]>
        <if test="limit != null and limit &gt; 0">
            <![CDATA[
            LIMIT #{limit}
            ]]>
        </if>
    </select>

    <!-- 获取根分类列表 -->
    <select id="selectRootCategories" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        WHERE parent_id = 0
        <if test="status != null and status != ''">
            AND status = #{status}
        </if>
        <choose>
            <when test="orderBy == 'name'">
                ORDER BY name #{orderDirection}
            </when>
            <when test="orderBy == 'content_count'">
                ORDER BY content_count #{orderDirection}
            </when>
            <when test="orderBy == 'create_time'">
                ORDER BY create_time #{orderDirection}
            </when>
            <when test="orderBy == 'update_time'">
                ORDER BY update_time #{orderDirection}
            </when>
            <otherwise>
                ORDER BY sort #{orderDirection}
            </otherwise>
        </choose>
    </select>

    <!-- =================== 数据同步与维护 =================== -->

    <!-- 重新计算分类内容数量 -->
    <update id="recalculateContentCount">
        <choose>
            <when test="categoryId != null">
                <!-- 重新计算指定分类的内容数量 -->
                UPDATE t_category
                SET content_count = (
                    SELECT COALESCE(COUNT(*), 0)
                    FROM t_content
                    WHERE category_id = #{categoryId}
                    AND status = 'PUBLISHED'
                ),
                update_time = NOW()
                WHERE id = #{categoryId}
            </when>
            <otherwise>
                <!-- 重新计算所有分类的内容数量 -->
                UPDATE t_category c
                SET content_count = (
                    SELECT COALESCE(COUNT(*), 0)
                    FROM t_content ct
                    WHERE ct.category_id = c.id
                    AND ct.status = 'PUBLISHED'
                ),
                update_time = NOW()
            </otherwise>
        </choose>
    </update>

    <!-- 同步分类层级关系（修复数据不一致） -->
    <update id="syncCategoryHierarchy">
        <!-- 将循环引用的分类设为根分类 -->
        UPDATE t_category
        SET parent_id = 0,
            update_time = NOW()
        WHERE id IN (
            SELECT DISTINCT c1.id
            FROM t_category c1, t_category c2
            WHERE c1.parent_id = c2.id 
            AND c2.parent_id = c1.id
            AND c1.id != c2.id
        )
    </update>

    <!-- =================== 范围查询 =================== -->

    <!-- 根据内容数量范围查询分类 -->
    <select id="selectCategoriesByContentCountRange" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        <![CDATA[
        WHERE 1=1
        ]]>
        <if test="minContentCount != null">
            <![CDATA[
            AND content_count >= #{minContentCount}
            ]]>
        </if>
        <if test="maxContentCount != null">
            <![CDATA[
            AND content_count <= #{maxContentCount}
            ]]>
        </if>
        <if test="status != null and status != ''">
            <![CDATA[
            AND status = #{status}
            ]]>
        </if>
        <choose>
            <when test="orderBy == 'name'">
                ORDER BY name #{orderDirection}
            </when>
            <when test="orderBy == 'content_count'">
                ORDER BY content_count #{orderDirection}
            </when>
            <when test="orderBy == 'create_time'">
                ORDER BY create_time #{orderDirection}
            </when>
            <when test="orderBy == 'update_time'">
                ORDER BY update_time #{orderDirection}
            </when>
            <otherwise>
                ORDER BY sort #{orderDirection}
            </otherwise>
        </choose>
    </select>

    <!-- 根据排序值范围查询分类 -->
    <select id="selectCategoriesBySortRange" resultType="com.gig.collide.domain.Category">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        <![CDATA[
        WHERE 1=1
        ]]>
        <if test="minSort != null">
            <![CDATA[
            AND sort >= #{minSort}
            ]]>
        </if>
        <if test="maxSort != null">
            <![CDATA[
            AND sort <= #{maxSort}
            ]]>
        </if>
        <if test="parentId != null">
            <![CDATA[
            AND parent_id = #{parentId}
            ]]>
        </if>
        <if test="status != null and status != ''">
            <![CDATA[
            AND status = #{status}
            ]]>
        </if>
        <choose>
            <when test="orderBy == 'name'">
                ORDER BY name #{orderDirection}
            </when>
            <when test="orderBy == 'content_count'">
                ORDER BY content_count #{orderDirection}
            </when>
            <when test="orderBy == 'create_time'">
                ORDER BY create_time #{orderDirection}
            </when>
            <when test="orderBy == 'update_time'">
                ORDER BY update_time #{orderDirection}
            </when>
            <otherwise>
                ORDER BY sort #{orderDirection}
            </otherwise>
        </choose>
    </select>

</mapper> 